<h1>Welcome to Links</h1>

<% if current_user %>
  <br>
  <%= link_to "Logout", logout_path, method: :delete %>
  <br>
  <br>
  <br>

  <% if @link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@link.errors.count, "error") %> prohibited this link from being saved:</h2>

      <ul>
        <% @link.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for(@link) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :url %>
    <%= f.text_field :url %>

    <%= f.submit "Add Link" %>
  <% end %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Url</th>
        <th colspan='2'>Status</th>
      </tr>
    </thead>
    <tbody id='links-table'>
      <% @links.each do |link| %>
        <tr>
          <td><%= link.title %></td>
          <td><%= link.url %></td>
          <td id="link-status-<%= link.id %>"><%= link_status(link) %></td>
          <td>
            <a href="#" data-id="<%= link.id %>" class="update-status-<%= link.id %>">Mark as <%= link_action(link) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>

  <%= link_to "Sign Up", new_user_path %>
  <br>
  <%= link_to "Login", new_session_path %>
  <br>
<% end %>

